<resources>
    <!-- Base application theme. -->
    <!-- Light mode -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="navIconColor">#757575</item>
        <item name="bottomNavBarColor">#FFFFFF</item>
        <item name="colorControlNormal">#000000</item>
        <item name="selectedItemcolor">@color/colorPrimary</item>
        <item name="shortDescTextColor">?android:attr/textColorSecondary</item>
        <item name="myTextColor">#000000</item>
        <item name="countyItemBGColor">#126C6E6E</item>
        <item name="progressColor">#EC3E3E</item>
    </style>


    <!-- Base application theme. -->
    <!-- Dark mode -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#251E61</item>
        <item name="colorPrimaryDark">#141E61</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#2B2B2B</item>
        <item name="cardBackgroundColor">#444444</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="navIconColor">#757575</item>
        <item name="bottomNavBarColor">#191919</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="selectedItemcolor">#4d58a7</item>
        <item name="shortDescTextColor">?android:attr/textColorSecondaryInverse</item>
        <item name="myTextColor">#FFFFFF</item>
        <item name="countyItemBGColor">#126C6E6E</item>
        <item name="progressColor">#EC3E3E</item>
    </style>


    <!-- Full screen launcher -->
    <style name="LauncherFullScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="AlertDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:textColor">?attr/myTextColor</item>
        <item name="android:textColorPrimary">?attr/myTextColor</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/button</item>
    </style>
    <style name="button">
        <item name="android:textColor">?attr/myTextColor</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>